  <script>
    function mostrarBoletos() {
      const lista = document.getElementById("lista");
      const resultado = document.getElementById("resultado");

      if (lista.value === "") {
        resultado.style.display = "none";
        return;
      }

      const datos = lista.value.split("|");
      const nombre = datos[0];
      const boletos = datos[1];

      resultado.innerHTML = `
        <strong>${nombre}</strong><br>
        Tienes <strong>${boletos}</strong> boletos para acceso al sal√≥n con tus invitados.
        Favor de presentar esta pantalla en la entrada
      `;
      resultado.style.display = "block";
    }
  </script>

